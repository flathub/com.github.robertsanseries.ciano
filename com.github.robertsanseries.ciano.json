{
    "app-id": "com.github.robertsanseries.ciano",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "base": "io.elementary.BaseApp",
    "base-version": "circe-25.08",
    "command": "com.github.robertsanseries.ciano",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.vala"
    ],
    "build-options" : {
        "prepend-path" : "/usr/lib/sdk/vala/bin/",
        "prepend-ld-library-path" : "/usr/lib/sdk/vala/lib"
    },
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--env=PATH=/app/bin:/usr/bin"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/vala",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/lib/girepository-1.0",
        "/lib/*.la",
        "/lib/*.a"
    ],
    "modules": [
        {
            "name": "libgee",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgee/0.20/libgee-0.20.8.tar.xz",
                    "sha256": "189815ac143d89867193b0c52b7dc31f3aa108a15f04d6b5dca2b6adfad0b0ee"
                }
            ]
        },
        {
          "name": "imagemagick",
          "config-opts": [
            "--disable-static",
            "--disable-docs"
          ],
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/ImageMagick/ImageMagick.git",
                  "tag": "7.1.2-11"
              }
          ]
        },
        {
            "name": "ciano",
            "buildsystem": "meson",
            "config-opts": [
              "--buildtype=release"
            ],
            "post-install": [
                "cp -u -r /app/share/icons/hicolor/24x24/* /app/share/icons/hicolor/scalable/",
                "rm -r /app/share/icons/hicolor/[0-9]*"
            ],
            "sources": [
                {
                   "type": "git",
                   "url": "https://github.com/robertsanseries/ciano.git",
                   "commit": "31ae62057660e327eaf5e358a31c2364b62addbf"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/fix_turkish_locale.patch",
                        "patches/elementary-theme.patch",
                        "patches/ConverterController.vala.patch"
                    ]
                }
            ]
        }
    ]
}
