{
    "app-id": "com.github.robertsanseries.ciano",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "base": "io.elementary.BaseApp",
    "base-version": "circe-25.08",
    "command": "com.github.robertsanseries.ciano",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.vala"
    ],
    "build-options" : {
        "prepend-path" : "/usr/lib/sdk/vala/bin/",
        "prepend-ld-library-path" : "/usr/lib/sdk/vala/lib"
    },
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--env=PATH=/app/bin:/usr/bin"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/vala",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/lib/girepository-1.0",
        "/lib/*.la",
        "/lib/*.a"
    ],
    "modules": [
        {
            "name": "libgee",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgee/0.20/libgee-0.20.8.tar.xz",
                    "sha256": "189815ac143d89867193b0c52b7dc31f3aa108a15f04d6b5dca2b6adfad0b0ee"
                }
            ]
        },
        {
          "name": "imagemagick",
          "config-opts": [
            "--disable-static",
            "--disable-docs"
          ],
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/ImageMagick/ImageMagick.git",
                  "tag": "7.1.2-11"
              }
          ]
        },
        {
            "name": "chrpath",
            "cleanup": ["*"],
            "sources": [
                {
                  "type": "archive",
                  "url": "http://deb.debian.org/debian/pool/main/c/chrpath/chrpath_0.16.orig.tar.gz",
                  "sha256": "bb0d4c54bac2990e1bdf8132f2c9477ae752859d523e141e72b3b11a12c26e7b"
                }
            ]
        },
        {
            "name": "x264",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-static",
                "--enable-pic"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://deb.debian.org/debian/pool/main/x/x264/x264_0.164.3108+git31e19f9.orig.tar.gz",
                    "sha256": "41606cb8e788a7f8c4514290646d4ba5c7bc68d9e1ccd1a73f446a90546913eb"
                }
            ]
        },
        {
            "name": "aac",
            "buildsystem": "simple",
            "build-commands": [
                "autoreconf -fiv",
                "./configure --prefix=/app --disable-shared",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mstorsjo/fdk-aac.git",
                    "tag": "v2.0.3",
                    "commit": "716f4394641d53f0d79c9ddac3fa93b03a49f278"
                }
            ]
        },
        {
            "name": "ciano",
            "buildsystem": "meson",
            "config-opts": [
              "--buildtype=release"
            ],
            "post-install": [
                "cp -u -r /app/share/icons/hicolor/24x24/* /app/share/icons/hicolor/scalable/",
                "rm -r /app/share/icons/hicolor/[0-9]*"
            ],
            "sources": [
                {
                   "type": "git",
                   "url": "https://github.com/robertsanseries/ciano.git",
                   "commit": "31ae62057660e327eaf5e358a31c2364b62addbf"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/elementary-theme.patch",
                        "patches/ConverterController.vala.patch"
                    ]
                }
            ]
        }
    ]
}
